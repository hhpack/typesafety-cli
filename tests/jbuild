(jbuild_version 1)

(executable (
  (name test)
  (libraries (
    oUnit
    typesafety.cli
    typesafety.misc
    typesafety.env
    typesafety.hhvm
    typesafety.review
  ))
))

(alias (
  (name runtest)
  (deps (test.exe))
  (action (
    progn
      (run cp -R ../../../examples .)
      (run cp -R ../../../tests/fixtures .)
      (run ${<})
  ))
))
